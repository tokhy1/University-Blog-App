<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Create Category</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="bg-gray-100 font-sans m-0 p-0">

    <%- include("../partials/navbar") %>

    <div class="max-w-3xl mx-auto mt-10 bg-white p-8 rounded-xl shadow-md">
      <h1 class="text-2xl font-bold text-gray-900 mb-6">Add New Category</h1>

      <form action="/categories/new" method="POST" class="flex flex-col gap-4">
        <label class="text-gray-700 font-medium">Name</label>
        <input 
          type="text" 
          name="name" 
          required 
          class="p-3 border border-gray-300 rounded-lg text-gray-900 text-base focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
        />

        <label class="text-gray-700 font-medium">Description</label>
        <textarea 
          name="description" 
          rows="4" 
          class="p-3 border border-gray-300 rounded-lg text-gray-900 text-base focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
        ></textarea>

        <button type="submit" class="w-fit bg-green-600 hover:bg-green-700 text-white py-2 px-6 rounded-lg cursor-pointer">
          Create
        </button>
      </form>
    </div>

    <%- include("../partials/footer") %>
  </body>
</html>
