<% title = 'Edit Category - My Phlog' %>
<div class="max-w-3xl mx-auto mt-10 bg-white p-8 mb-10 rounded-xl shadow-md">
  <h1 class="text-2xl font-bold text-gray-900 mb-6">Edit Category</h1>

  <form
    action="/categories/update/<%= category.cat_id %>"
    method="POST"
    class="flex flex-col gap-4"
  >
    <label class="text-gray-700 font-medium">Name</label>
    <input
      type="text"
      name="name"
      value="<%= category.name %>"
      required
      class="p-3 border border-gray-300 rounded-lg text-gray-900 text-base focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
    />

    <label class="text-gray-700 font-medium">Description</label>
    <textarea
      name="description"
      rows="4"
      class="p-3 border border-gray-300 rounded-lg text-gray-900 text-base focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
    >
<%= category.description %></textarea
    >

    <button
      type="submit"
      class="w-fit bg-blue-600 hover:bg-blue-700 text-white py-2 px-6 rounded-lg cursor-pointer"
    >
      Update
    </button>
  </form>
</div>
